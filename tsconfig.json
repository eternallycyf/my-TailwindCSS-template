{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2021"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext", //node环境
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "declaration": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/assets/*": [
        "src/assets/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/views/*": [
        "src/views/*"
      ],
      "@/layout/*": [
        "src/layout/*"
      ],
      "@/router/*": [
        "src/router/*"
      ],
      "@/hooks/*": [
        "src/hooks/*"
      ]
    },
  },
  "include": [
    "src",
    "vite.config.ts",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}